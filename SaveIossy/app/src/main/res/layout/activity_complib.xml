<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comp"
    tools:context=".Complib">

    <Button
        android:id="@+id/btn_complib_to_complib_screen"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/arrowfront"
        app:backgroundTint="@null"
        android:fontFamily="serif-monospace"
        android:textSize="10dp"
        android:layout_marginLeft="100dp"
        />

    <Button
        android:id="@+id/btn_complib_to_in_library"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/arrowdown"
        app:backgroundTint="@null"
        android:fontFamily="serif-monospace"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        android:layout_marginLeft="10dp"
        />

</RelativeLayout>