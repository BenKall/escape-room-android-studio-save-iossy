<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/androidcorridor"
    tools:context=".Appcor">

    <Button
        android:id="@+id/btn_appcor_to_appclass"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/arrowfront"
        app:backgroundTint="@null"
        android:fontFamily="serif-monospace"
        android:textSize="10dp"
        android:layout_marginRight="250dp"
         />

    <Button
        android:id="@+id/btn_appcor_to_library"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/arrowright"
        app:backgroundTint="@null"
        android:fontFamily="serif-monospace"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        />

    <Button
        android:id="@+id/btn_appcor_to_servers"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/arrowleft"
        app:backgroundTint="@null"
        android:fontFamily="serif-monospace"
        android:textSize="10dp"
        android:layout_marginLeft="10dp"
         />

    <Button
        android:id="@+id/btn_appcor_to_name_input"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/arrowleft"
        app:backgroundTint="@null"
        android:fontFamily="serif-monospace"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textSize="10dp"
        android:layout_marginRight="250dp"
        android:text="@string/back" />
</RelativeLayout>